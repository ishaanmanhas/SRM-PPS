#include <stdio.h>
int main()
{
 int a=10;
 signed int b=1000;
 unsigned int c=1000;
 short int d=1000;
 signed short int e=10;
 unsigned short int f=100;
 long int g=1000;
 signed long int h=10000;
 unsigned long int i=10;
 double p=3.14;
 printf("The size of (a) is %d\n",sizeof(a));
 printf("The size of (b) is %d\n",sizeof(b));
 printf("The size of (c) is %d\n",sizeof(c));
 printf("The size of (d) is %d\n",sizeof(d));
 printf("The size of (e) is %d\n",sizeof(e));
 printf("The size of (f) is %d\n",sizeof(f));
 printf("The size of (g) is %d\n",sizeof(g));
 printf("The size of (h) is %d\n",sizeof(h));
 printf("The size of (i) is %d\n",sizeof(i));
 printf("The size of (p) is %d\n",sizeof(p));
return 0;
}
